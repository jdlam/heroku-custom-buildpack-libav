#!/bin/sh

indent() {
  sed -u 's/^/       /'
}

echo "-----> Install libav"
BUILD_DIR=$1
VENDOR_DIR="vendor"
DOWNLOAD_URL="https://libav.org/releases/libav-12.3.tar.xz"

echo "DOWNLOAD_URL = " $DOWNLOAD_URL | indent

cd $BUILD_DIR
mkdir -p $VENDOR_DIR
cd $VENDOR_DIR
mkdir -p libav
cd libav
curl -L --silent $DOWNLOAD_URL | tar xJ --strip-components=1

echo "exporting PATH" | indent
PROFILE_PATH="$BUILD_DIR/.profile.d/libav.sh"
mkdir -p $(dirname $PROFILE_PATH)
echo 'export PATH="$PATH:${HOME}/vendor/libav"' >> $PROFILE_PATH
